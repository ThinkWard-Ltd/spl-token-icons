{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "moduleResolution": "node",

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "lib": ["ES2015"],
    "noEmit": true,
    "importHelpers": true
  },
  "include": ["src/", "scripts/"]
}
